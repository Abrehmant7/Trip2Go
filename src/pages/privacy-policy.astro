---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import heroImage from "../assets/privacy-policy.jpg";

const primaryPersonalData = [
    "Complete legal name as appears on official documentation",
    "Primary and alternative email addresses",
    "Contact telephone numbers",
    "Passport and other government-issued identification details",
    "Nationality, citizenship status, and international travel history",
    "Financial and billing information for payment processing",
];

const cookieClassifications = [
    {
        title: "Strictly Necessary Cookies",
        description:
            "Enable fundamental website operations and secure authentication processes",
    },
    {
        title: "Functional Cookies",
        description: "Preserve user preferences and customization settings",
    },
    {
        title: "Performance Cookies",
        description:
            "Generate analytics data to assess website usage patterns and optimize performance",
    },
    {
        title: "Targeting Cookies",
        description:
            "(where applicable) Monitor user engagement for marketing and advertising optimization",
    },
];

const dataProcessingPurposes = [
    "Facilitating visa application preparation and submission procedures",
    "Maintaining communication regarding service requests and updates",
    "Processing payments and generating financial documentation",
    "Enhancing website functionality and service quality",
    "Ensuring compliance with legal and regulatory requirements",
    "Implementing fraud prevention and security measures",
    "Providing customer support and resolving inquiries",
];

const userRights = [
    "Right to access and obtain copies of your data",
    "Right to rectify inaccurate or incomplete information",
    "Right to erasure under certain circumstances",
    "Right to restrict processing",
    "Right to data portability",
    "Right to object to processing",
    "Right to object to processing",
];

const definations = [
    {
        label: "Account",
        description:
            "A unique user profile established to facilitate access to our services",
    },
    {
        label: "Company",
        description:
            "Trip2Go, the data controller for the purposes of this policy",
    },
    {
        label: "Cookies",
        description:
            "Small data files stored on your computing device that retain browsing preferences and activity",
    },
    {
        label: "Country",
        description:
            "The United Kingdom, our primary jurisdiction of operation",
    },
    {
        label: "Device",
        description:
            "Any internet-capable equipment including smartphones, tablets, computers, or similar technology",
    },
    {
        label: "Personal Data",
        description:
            "Any information relating to an identified or identifiable natural person",
    },
    {
        label: "Service",
        description:
            "Our comprehensive visa consultation and application assistance services",
    },
    {
        label: "Service Provider",
        description:
            "Third-party organizations that process data on our behalf under contractual arrangements",
    },
    {
        label: "Usage Data",
        description:
            "Information automatically collected regarding your interaction with our services",
    },
    {
        label: "Website",
        description: "Our online platform accessible at https://trip2go.co.uk",
    },
    {
        label: "You/Your",
        description:
            "The individual user or the legal entity you represent when using our services",
    },
];
---

<Layout>
    <Hero
        PageName="privacy-policy"
        image={heroImage}
        title="Privacy Policy"
        subtitle="Your Privacy Matters."
    />

    <main class="bg-gray-50 py-16 px-4 sm:px-6 lg:px-8">
        <div
            class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden"
        >
            <!-- ICO Certification -->
            <div class="p-8 md:p-12 border-b border-gray-100 text-center">
                <p class="font-bold text-lg text-gray-900 mb-4">
                    Trip2Go is certified by the Information Commissioner's
                    Office (ICO).
                </p>
                <div class="text-gray-600 space-y-2">
                    <p>
                        <strong>Registration reference:</strong> ZC079687
                    </p>
                    <p>
                        <strong>Date registered:</strong> 15 January 2026
                    </p>
                    <p>
                        <strong>Registration expires:</strong> 14 January 2027
                    </p>
                    <p>
                        <strong>Website:</strong>
                        <a
                            href="https://ico.org.uk"
                            target="_blank"
                            class="text-brand-blue hover:text-brand-yellow font-medium"
                            >ico.org.uk</a
                        >
                    </p>
                </div>
            </div>

            <!-- Introduction -->
            <div class="p-8 md:p-12 border-b border-gray-100">
                <p
                    class="text-gray-500 text-sm mb-4 font-bold uppercase tracking-wider"
                >
                    Effective Date: January 14, 2026
                </p>
                <div class="prose prose-blue max-w-none text-gray-600">
                    <p class="mb-4">
                        This Privacy Policy governs how Trip2Go ("we," "us," or
                        "our") collects, processes, utilizes, and protects your
                        personal information when you access our website or
                        engage our visa consultation services. This policy also
                        outlines your data protection rights and describes our
                        compliance with applicable privacy legislation.
                    </p>
                    <p>
                        By accessing our services, you acknowledge and consent
                        to the information practices described in this policy.
                    </p>
                </div>
            </div>

            <!-- 1. Interpretation and Definitions -->
            <div class="p-8 md:p-12 border-b border-gray-100 bg-gray-50/50">
                <h2
                    class="text-2xl font-bold text-gray-900 mb-6 flex items-center"
                >
                    <span
                        class="bg-brand-blue text-white w-8 h-8 rounded-full flex items-center justify-center text-sm mr-3"
                        >1</span
                    >
                    Interpretation and Definitions
                </h2>
                <div class="space-y-6">
                    <div>
                        <h3 class="font-bold text-gray-800 mb-2">
                            Interpretation
                        </h3>
                        <p class="text-gray-600">
                            Capitalized terms used throughout this policy have
                            specific meanings as defined below. These
                            definitions apply regardless of whether the terms
                            appear in singular or plural form.
                        </p>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-800 mb-3">
                            Definitions
                        </h3>
                        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {
                                definations.map((defination) => (
                                    <li class="bg-white p-4 rounded-lg shadow-sm border border-gray-100">
                                        <strong class="text-brand-blue">
                                            {defination.label}:
                                        </strong>
                                        {defination.description}
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- 2. Categories of Personal Data Collected -->
            <div class="p-8 md:p-12 border-b border-gray-100">
                <h2
                    class="text-2xl font-bold text-gray-900 mb-6 flex items-center"
                >
                    <span
                        class="bg-brand-blue text-white w-8 h-8 rounded-full flex items-center justify-center text-sm mr-3"
                        >2</span
                    >
                    Categories of Personal Data Collected
                </h2>

                <div class="mb-8">
                    <h3
                        class="text-lg font-bold text-gray-800 mb-4 flex items-center"
                    >
                        <i class="ri-file-user-line text-brand-yellow mr-2"></i> Primary
                        Personal Information
                    </h3>
                    <ul class="space-y-2">
                        {
                            primaryPersonalData.map((item) => (
                                <li class="flex items-start text-gray-600">
                                    <i class="ri-checkbox-circle-fill text-green-500 mr-2 mt-1 shrink-0" />
                                    {item}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div>
                    <h3
                        class="text-lg font-bold text-gray-800 mb-4 flex items-center"
                    >
                        <i class="ri-smartphone-line text-brand-yellow mr-2"
                        ></i> Usage and Technical Data
                    </h3>
                    <p
                        class="text-gray-600 leading-relaxed bg-blue-50 p-6 rounded-lg border-l-4 border-brand-blue"
                    >
                        Usage Data is automatically generated during your
                        interaction with our services. This encompasses your
                        device's Internet Protocol (IP) address, browser type
                        and version, pages accessed, session duration, unique
                        device identifiers, and additional diagnostic
                        information. For mobile device users, we may
                        additionally collect device model specifications,
                        operating system version, mobile browser type, and
                        unique device identifiers for service optimization
                        purposes.
                    </p>
                </div>
            </div>

            <!-- 3. Tracking Technologies and Cookie Implementation -->
            <div
                class="p-8 md:p-12 border-b border-gray-100 space-y-2 bg-gray-50/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 mb-6 flex items-center"
                >
                    <span
                        class="bg-brand-blue text-white w-8 h-8 rounded-full flex items-center justify-center text-sm mr-3"
                        >3</span
                    >
                    Tracking Technologies and Cookies
                </h2>
                <p class="text-gray-600 mb-6">
                    We employ cookies and similar tracking mechanisms to enhance
                    user experience, analyze service utilization, and optimize
                    website functionality.
                </p>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        cookieClassifications.map((cookie) => (
                            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
                                <h4 class="font-bold text-brand-blue mb-2">
                                    {cookie.title}
                                </h4>
                                <p class="text-gray-600 text-sm">
                                    {cookie.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
                <p class="text-gray-500 text-sm italic mt-6">
                    * Users may configure browser settings to decline cookies;
                    however, this may limit certain website functionalities.
                </p>
            </div>

            <!-- 4. Lawful Basis and Purposes -->
            <div class="p-8 md:p-12 border-b border-gray-100">
                <h2
                    class="text-2xl font-bold text-gray-900 mb-6 flex items-center"
                >
                    <span
                        class="bg-brand-blue text-white w-8 h-8 rounded-full flex items-center justify-center text-sm mr-3"
                        >4</span
                    >
                    Purposes for Data Processing
                </h2>
                <div
                    class="bg-yellow-50 p-8 rounded-xl border border-yellow-100"
                >
                    <ul class="space-y-3">
                        {
                            dataProcessingPurposes.map((purpose) => (
                                <li class="flex items-start text-gray-700 font-medium">
                                    <i class="ri-arrow-right-circle-fill text-brand-yellow mr-3 mt-1" />
                                    {purpose}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            <!-- 5, 6, 7. Other Sections -->
            <div class="p-8 md:p-12 border-b border-gray-100">
                <div class="space-y-8">
                    <div>
                        <h2 class="text-xl font-bold text-gray-900 mb-4">
                            5. Data Sharing and International Transfers
                        </h2>
                        <div class="space-y-4 text-gray-600">
                            <p>
                                <strong class="text-gray-800"
                                    >Third-Party Processing:</strong
                                > Your information may be processed at Trip2Go facilities
                                or by authorized partners globally. Data transfers
                                outside your jurisdiction are conducted with appropriate
                                safeguards and security protocols.
                            </p>
                            <p>
                                <strong class="text-gray-800"
                                    >Corporate Transactions:</strong
                                > In the event of merger, acquisition, or asset transfer,
                                your Personal Data may be transferred to the acquiring
                                entity. We will provide advance notification before
                                your data becomes subject to alternative privacy policies.
                            </p>
                            <p>
                                <strong class="text-gray-800"
                                    >Legal Disclosure:</strong
                                > We may disclose personal information when legally
                                required or when necessary to protect our rights,
                                property, or user safety, or to comply with judicial
                                proceedings, court orders, or legal processes.
                            </p>
                        </div>
                    </div>
                    <hr class="border-gray-100" />
                    <div>
                        <h2 class="text-xl font-bold text-gray-900 mb-4">
                            6. Data Security Measures
                        </h2>
                        <p class="text-gray-600">
                            We implement industry-standard security protocols to
                            protect your personal information. However, no
                            method of electronic transmission or storage can
                            guarantee absolute security, and we cannot ensure
                            complete protection against all potential security
                            breaches.
                        </p>
                    </div>
                    <hr class="border-gray-100" />
                    <div>
                        <h2 class="text-xl font-bold text-gray-900 mb-4">
                            7. Protection of Minor's Privacy
                        </h2>
                        <p class="text-gray-600">
                            Our services are not designed for or directed toward
                            individuals under the age of 13. We do not knowingly
                            collect personal information from children. If we
                            become aware of such collection, we will promptly
                            delete the information and terminate the associated
                            account.
                        </p>
                    </div>
                </div>
            </div>

            <!-- 8. Data Retention and Your Rights -->
            <div
                class="p-8 md:p-12 border-b space-y-6 border-gray-100 bg-gray-50/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 mb-6 flex items-center"
                >
                    <span
                        class="bg-brand-blue text-white w-8 h-8 rounded-full flex items-center justify-center text-sm mr-3"
                        >8</span
                    >
                    Data Retention and Your Rights
                </h2>
                <p class="text-gray-600 mb-6">
                    We retain personal data only as long as necessary to fulfill
                    the purposes outlined in this policy or as required by
                    applicable law. You may have certain rights regarding your
                    personal data, including:
                </p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {
                        userRights.map((right) => (
                            <div class="flex items-center bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
                                <i class="ri-scales-3-line text-brand-blue mr-3 text-xl" />
                                <span class="text-gray-700 font-medium">
                                    {right}
                                </span>
                            </div>
                        ))
                    }
                </div>
                <p class="mt-6 text-gray-600">
                    To exercise these rights, please contact us using the
                    information provided below.
                </p>
            </div>

            <!-- Footer / Contact -->
            <div class="p-8 md:p-12 bg-brand-blue text-white text-center">
                <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
                <p class="mb-8 text-blue-100">
                    For questions, concerns, or requests regarding this Privacy
                    Policy or our data practices, please contact us:
                </p>
                <div
                    class="inline-flex flex-col items-center gap-4 text-lg font-medium"
                >
                    <a
                        href="mailto:info@trip2go.co.uk"
                        class="hover:text-brand-yellow transition-colors flex items-center"
                    >
                        <i class="ri-mail-line mr-3 text-brand-yellow"></i> info@trip2go.co.uk
                    </a>
                    <a
                        href="https://trip2go.co.uk"
                        target="_blank"
                        class="hover:text-brand-yellow transition-colors flex items-center"
                    >
                        <i class="ri-global-line mr-3 text-brand-yellow"></i> https://trip2go.co.uk
                    </a>
                </div>
                <div
                    class="mt-12 pt-8 border-t border-blue-800 text-sm text-blue-300"
                >
                    <p>
                        We reserve the right to modify this Privacy Policy
                        periodically. Material changes will be communicated
                        through prominent website notices or direct email
                        notification.
                    </p>
                </div>
            </div>
        </div>
    </main>
</Layout>
