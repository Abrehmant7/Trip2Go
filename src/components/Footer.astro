---
import "../styles/global.css";
import { Image } from "astro:assets";
import logoNew from "../assets/logo-new.png";
import { Icon } from "astro-icon/components";

const socialLinks = [
    {
        href: "https://www.facebook.com/profile.php?id=61570575601308",
        icon: "ri-facebook-circle-fill",
    },
    {
        href: "https://www.instagram.com/trip2go.uk/",
        icon: "ri-instagram-fill",
    },
    { href: "https://x.com/Trip2gouk", icon: "ri-twitter-x-fill" },
    { href: "https://www.reddit.com/user/Trip2go-UK/", icon: "ri-reddit-line" },
];

const quickLinks = [
    { href: "/about", label: "About Us" },
    { href: "/packages", label: "Packages" },
    { href: "/flights", label: "Flights" },
];

const supportLinks = [
    { href: "/contact", label: "Contact" },
    { href: "/faqs", label: "FAQ" },
    { href: "/sitemap", label: "Sitemap" },
];

const legalLinks = [
    { href: "/privacy-policy", label: "Privacy" },
    { href: "/privacy-policy", label: "Terms" },
    { href: "/refund-policy", label: "Refund" },
];
---

<!-- Footer -->
<footer class="bg-brand-yellow">
    <!-- Footer Content -->
    <div class="max-w-7xl mx-auto pt-16 pb-8 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center text-center">
            <!-- Footer Logo -->
            <div class="mb-2">
                <a
                    href="/"
                    class="inline-block hover:opacity-90 transition-opacity"
                >
                    <Image
                        class="h-14 w-auto rounded-full"
                        src={logoNew}
                        alt="Trip2Go"
                    />
                </a>
            </div>

            <p class="text-gray-900 font-medium max-w-md mb-8">
                Your Guide to the World
            </p>

            <!-- Social Links -->
            <div class="flex space-x-8 mb-8">
                {
                    socialLinks.map((link) => (
                        <a
                            href={link.href}
                            class="text-gray-900 hover:text-white transition-colors duration-200"
                        >
                            <Icon
                                name={link.icon.replace("ri-", "ri:")}
                                class="text-3xl"
                            />
                        </a>
                    ))
                }
            </div>

            <!-- Quick Links Grid -->
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 w-full max-w-4xl border-t border-black/10 pt-8"
            >
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Company
                    </h4>
                    <ul class="space-y-2">
                        {
                            quickLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-800 hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Support
                    </h4>
                    <ul class="space-y-2">
                        {
                            supportLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-800 hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Legal
                    </h4>
                    <ul class="space-y-2">
                        {
                            legalLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-800 hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Contact
                    </h4>
                    <ul class="space-y-2">
                        <li
                            class="flex items-center justify-center md:justify-start gap-2 text-gray-800"
                        >
                            <a
                                href="mailto:info@trip2go.co.uk"
                                class="flex items-center gap-2 hover:text-brand-blue transition-colors"
                            >
                                <Icon name="ri:mail-send-line" /> info@trip2go.co.uk
                            </a>
                        </li>
                        <li
                            class="flex items-center justify-center md:justify-start gap-2 text-gray-800"
                        >
                            <a
                                href="tel:+441233538140"
                                class="flex items-center gap-2 hover:text-brand-blue transition-colors"
                            >
                                <Icon name="ri:phone-line" /> +44 1233 538140
                            </a>
                        </li>
                        <li
                            class="flex items-start justify-center md:justify-start gap-2 text-gray-800"
                        >
                            <Icon
                                name="ri:map-pin-line"
                                class="mt-1 shrink-0"
                            />
                            <span>3 Maryam close Rainham RM 13 9PE, London</span
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="mt-12 text-center border-t border-black/10 pt-6">
            <p class="text-sm text-gray-800">
                &copy; 2026 Trip2Go. All rights reserved.
            </p>
            <p class="text-sm text-gray-800">
                Disclaimer: We are a Private registered company and not
                affiliated with any Government agencies or any embassy of any
                country. We provide Professional service to the all national who
                is seeking to travel to Schengen zone.
            </p>
        </div>
    </div>
</footer>
