---
import "../styles/global.css";
import { Image } from "astro:assets";
import logoNew from "../assets/logo-new.png";

const socialLinks = [
    { href: "#", icon: "ri-facebook-circle-fill" },
    { href: "#", icon: "ri-instagram-fill" },
    { href: "#", icon: "ri-twitter-x-fill" },
    { href: "#", icon: "ri-youtube-fill" },
];

const quickLinks = [
    { href: "/about", label: "About Us" },
    { href: "#", label: "Careers" },
    { href: "#", label: "Press" },
];

const supportLinks = [
    { href: "/contact", label: "Contact" },
    { href: "/faq", label: "FAQ" },
    { href: "#", label: "Sitemap" },
];

const legalLinks = [
    { href: "#", label: "Privacy" },
    { href: "#", label: "Terms" },
    { href: "#", label: "Cookies" },
];

const businessLinks = [
    { href: "#", label: "Advertise" },
    { href: "#", label: "Partnerships" },
    { href: "#", label: "Affiliates" },
];
---

<!-- Footer -->
<footer class="bg-brand-yellow">
    <!-- Footer Content -->
    <div class="max-w-7xl mx-auto pt-16 pb-8 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center text-center">
            <!-- Footer Logo -->
            <div class="mb-6">
                <Image
                    class="h-14 w-auto rounded-full"
                    src={logoNew}
                    alt="Trip2Go"
                />
            </div>

            <p class="text-gray-900 font-medium max-w-md mb-8">
                Discover new places and experiences. Trip2Go makes travel
                planning easy and unforgettable.
            </p>

            <!-- Social Links -->
            <div class="flex space-x-8 mb-8">
                {
                    socialLinks.map((link) => (
                        <a
                            href={link.href}
                            class="text-gray-900 hover:text-white transition-colors duration-200"
                        >
                            <i class={link.icon + " text-3xl"} />
                        </a>
                    ))
                }
            </div>

            <!-- Quick Links Grid -->
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 w-full max-w-4xl border-t border-black/10 pt-8"
            >
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Company
                    </h4>
                    <ul class="space-y-2">
                        {
                            quickLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-800 hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Support
                    </h4>
                    <ul class="space-y-2">
                        {
                            supportLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-800 hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Legal
                    </h4>
                    <ul class="space-y-2">
                        {
                            legalLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-800 hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h4
                        class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-sm"
                    >
                        Contact
                    </h4>
                    <ul class="space-y-2">
                        <li
                            class="flex items-center justify-center md:justify-start gap-2 text-gray-800"
                        >
                            <i class="ri-mail-send-line"></i> hello@trip2go.com
                        </li>
                        <li
                            class="flex items-center justify-center md:justify-start gap-2 text-gray-800"
                        >
                            <i class="ri-phone-line"></i> +1 234 567 890
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="mt-12 text-center border-t border-black/10 pt-6">
            <p class="text-sm text-gray-800">
                &copy; 2026 Trip2Go. All rights reserved.
            </p>
        </div>
    </div>
</footer>
