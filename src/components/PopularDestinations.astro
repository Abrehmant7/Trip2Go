---
import { Image } from "astro:assets";
import TorontoImg from "../assets/canada.jpg";
import ParisImg from "../assets/france.jpg";
import AmsterdamImg from "../assets/netherlands.jpg";

const destinations = [
    {
        name: "Toronto, Canada",
        description: "Experience the majestic Rockies and vibrant cities.",
        image: TorontoImg,
        price: "£450",
        duration: "5 Nights",
    },
    {
        name: "Paris, France",
        description: "Discover the romantic streets and artistic heritage.",
        image: ParisImg,
        price: "£300",
        duration: "5 Nights",
    },
    {
        name: "Amsterdam, Netherlands",
        description: "Explore charming canals, tulip fields, and historic icons.",
        image: AmsterdamImg,
        price: "£250",
        duration: "5 Nights",
    },
];
---

<!-- Popular Destinations Section -->
<section id="packages" class="py-16 md:py-24 bg-white relative">
    <!-- Background Decoration (Optional) -->
    <div
        class="absolute inset-0 bg-[url('./assets/hero.jpg')] opacity-5 bg-cover bg-center bg-fixed"
    >
    </div>
    <!-- Removed the strong blue gradient, used subtle white/gray instead if needed, or just white -->

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2
                class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4 drop-shadow-sm"
            >
                Visit Best Destinations<br /> with us
            </h2>
        </div>

        <!-- Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                destinations.map((dest) => (
                    <div
                        class="group relative bg-brand-blue overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 cursor-pointer"
                    >
                        <!-- Image Container -->
                        <div class="relative h-64 overflow-hidden">
                        <Image
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                src={dest.image}
                                alt={dest.name}
                                widths={[320, 480, 640, 960, 1280]}
                                quality={80}
                                sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                            />
                            <!-- Price Badge -->
                            <div
                                class="absolute top-4 right-4 bg-brand-yellow text-gray-900 px-4 py-2 rounded-none font-bold shadow-lg"
                            >
                                {dest.price}
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-6">
                            <h3
                                class="text-2xl font-bold text-white mb-2 group-hover:text-brand-yellow transition-colors"
                            >
                                {dest.name}
                            </h3>
                            <p class="text-blue-100 mb-4">{dest.description}</p>
                            <div class="flex items-center justify-between">
                                <span class="text-blue-200 flex items-center gap-2">
                                    <i class="ri-timer-flash-line text-brand-yellow"></i>
                                    {dest.duration}
                                </span>
                                <button
                                    class="px-6 py-2 bg-brand-yellow text-gray-900 rounded-none font-semibold hover:bg-white hover:text-brand-yellow transition-all duration-300 border border-brand-yellow"
                                >
                                    Learn More
                                </button>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
