---
import { Image } from "astro:assets";
import TorontoImg from "../assets/canada.jpg";
import ParisImg from "../assets/france.jpg";
import GreeceImg from "../assets/Greece.jpg";
import { Icon } from "astro-icon/components";

const destinations = [
    {
        name: "Athens, Greece",
        description: "Explore the ancient ruins and sunny islands.",
        image: GreeceImg,
        price: "£286", // Sum of flight + hotel + act roughly? Or just base package price? User didn't specify package price. France was £300. I'll summarize components: 176+45+65 = 286.
        duration: "7 Nights", // 2 to 9 March is 7 nights
        link: "/packages/greece"
    },
    {
        name: "Paris, France",
        description: "Discover the romantic streets and artistic heritage.",
        image: ParisImg,
        price: "£400",
        duration: "Flexible",
        link: "/packages/france", // New detailed page
    },
    {
        name: "Toronto, Canada",
        description: "Experience the majestic Rockies and vibrant cities.",
        image: TorontoImg,
        price: "£1132",
        duration: "8 Nights",
        link: "/packages/canada"
    },
];
---

<!-- Popular Destinations Section -->
<section id="packages" class="py-16 md:py-24 bg-white relative">
    <!-- Background Decoration (Optional) -->
    <div
        class="absolute inset-0 bg-[url('./assets/hero.jpg')] opacity-5 bg-cover bg-center bg-fixed"
    >
    </div>
    <!-- Removed the strong blue gradient, used subtle white/gray instead if needed, or just white -->

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <div class="overflow-hidden">
                <h2
                    id="destinations-title"
                    class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4 drop-shadow-sm opacity-0 translate-y-8"
                >
                    Visit Best Destinations<br /> with us
                </h2>
            </div>
            
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("astro:page-load", () => {
        const title = document.getElementById("destinations-title");
        
        if (title) {
           gsap.to(title, {
            scrollTrigger: {
                trigger: title,
                start: "top 80%",
                toggleActions: "play none none reverse"
            },
            opacity: 1,
            y: 0,
            duration: 1,
            ease: "power3.out"
           });
        }
    });
</script>
        </div>

        <!-- Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                destinations.map((dest) => (
                    <div
                        class="group relative bg-brand-blue overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 cursor-pointer"
                    >
                        <!-- Image Container -->
                        <div class="relative h-64 overflow-hidden">
                        <Image
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                src={dest.image}
                                alt={dest.name}
                                widths={[320, 480, 640, 960, 1280]}
                                quality={80}
                                sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                            />
                            <!-- Price Badge -->
                            <div
                                class="absolute top-4 right-4 bg-brand-yellow text-gray-900 px-4 py-2 rounded-none font-bold shadow-lg"
                            >
                                {dest.price}
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-6">
                            <h3
                                class="text-2xl font-bold text-white mb-2 group-hover:text-brand-yellow transition-colors"
                            >
                                {dest.name}
                            </h3>
                            <p class="text-blue-100 mb-4">{dest.description}</p>
                            <div class="flex items-center justify-between">
                                <span class="text-blue-200 flex items-center gap-2">
                                    <Icon name="ri:timer-flash-line" class="text-brand-yellow" />
                                    {dest.duration}
                                </span>
                                <a
                                    href={dest.link}
                                    class="px-6 py-2 bg-brand-yellow text-gray-900 rounded-none font-semibold hover:bg-white hover:text-brand-yellow transition-all duration-300 border border-brand-yellow inline-block"
                                >
                                    Learn More
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
