---
import { Icon } from "astro-icon/components";
const cards = [
    {
        title: "Complete Visa Check",
        description:
            "We meticulously verify that you have every single document required for your specific visa application, ensuring zero missing pieces.",
        icon: "ri-file-list-3-line",
    },
    {
        title: "Embassy Standard Review",
        description:
            "Our experts align your application with strict embassy protocols, ensuring your papers are formatted exactly as required for approval.",
        icon: "ri-government-line",
    },
    {
        title: "Risk-Free Travel Prep",
        description:
            "Beyond the visa, we prepare your post-approval documents clearly, so you breeze through immigration and travel without stress.",
        icon: "ri-shield-check-line",
    },
];
---

<!-- Documentation Support Section -->
<section id="documents" class="py-16 md:py-24 bg-brand-blue relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-extrabold text-white mb-6">
                We Make Sure You<br /> Don't Miss Anything
            </h2>
            <p class="text-lg text-blue-100 max-w-2xl mx-auto">
                Your journey starts long before you board the plane. We handle
                the complex paperwork so you can focus on the excitement of your
                trip.
            </p>
        </div>

        <!-- Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                cards.map((card) => (
                    <div class="document-card bg-white p-8 text-center rounded-none shadow-xl transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl group flex flex-col items-center">
                        <div class="w-20 h-20 bg-blue-50 flex items-center justify-center rounded-full mb-6 group-hover:bg-brand-yellow/20 transition-colors">
                            <Icon
                                name={card.icon.replace("ri-", "ri:")}
                                class="text-4xl text-brand-blue group-hover:text-brand-yellow transition-colors"
                            />
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-4">
                            {card.title}
                        </h3>
                        <p class="text-gray-600 leading-relaxed mb-6">
                            {card.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";

    document.addEventListener("astro:page-load", () => {
        const section = document.getElementById("documents");
        const cards = document.querySelectorAll(".document-card");

        if (!section || cards.length === 0) return;

        // Set initial state
        gsap.set(cards, { opacity: 0, y: 30 });

        const isMobile = window.matchMedia("(max-width: 768px)").matches;

        if (isMobile) {
            // Mobile: Animate each card individually as it appears
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            gsap.to(entry.target, {
                                opacity: 1,
                                y: 0,
                                duration: 0.6,
                                ease: "power2.out",
                                clearProps: "all",
                            });
                            observer.unobserve(entry.target);
                        }
                    });
                },
                { threshold: 0.1 },
            );

            cards.forEach((card) => observer.observe(card));
        } else {
            // Desktop: Animate all cards with stagger when section appears
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            gsap.to(cards, {
                                opacity: 1,
                                y: 0,
                                duration: 0.8,
                                stagger: 0.2,
                                ease: "power2.out",
                                clearProps: "all",
                            });
                            observer.unobserve(entry.target);
                        }
                    });
                },
                { threshold: 0.15 },
            );

            observer.observe(section);
        }
    });
</script>
