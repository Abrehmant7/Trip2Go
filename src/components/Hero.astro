---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";

interface props {
    PageName: string;
    image: ImageMetadata;
    width?: number;
    height?: number;
    title?: string;
    subtitle?: string;
}

const {
    PageName,
    image,
    width = 1920,
    height = 1080,
    title,
    subtitle,
} = Astro.props as props;
// relative h-[60vh] flex items-center justify-center overflow-hidden
---

<!-- Hero Section -->
<header
    class={`relative flex items-center justify-center overflow-hidden ${PageName == "index" ? "h-[80vh] md:h-screen min-h-[500px] md:min-h-[600px]" : "h-[60vh]"}`}
>
    <!-- Background Image -->

    <div class="absolute inset-0 z-0">
        <Image
            class="w-full h-full object-cover"
            src={image}
            widths={[640, 1024, 1920]}
            sizes="(max-width: 640px) 100vw, 100vw"
            alt="Beautiful Landscape"
        />
        <!-- Overlay Gradient for text readability -->
        <div
            class="absolute inset-0 bg-linear-to-b from-black/50 via-transparent to-black/30"
        >
        </div>
    </div>

    <!-- Hero Content -->
    <!-- Hero Content -->
    {
        PageName === "index" ? (
            <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 mt-8 md:mt-16">
                <span
                    class="block text-white text-base sm:text-2xl font-semibold tracking-[0.2em] mb-2 sm:mb-4 drop-shadow-md animate-fade-in-up uppercase"
                    >A Land of Wonders</span
                >
                <h1
                    class="text-white text-5xl sm:text-7xl md:text-8xl lg:text-9xl font-extrabold tracking-tight mb-6 drop-shadow-xl"
                >
                    AUSTRALIA
                </h1>
                <!-- Optional CTA or Subtext can go here -->
            </div>
        ) : (
            <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 mt-16">
                <h1 class="text-white text-5xl md:text-7xl font-extrabold tracking-tight mb-4 drop-shadow-xl">
                    {title}
                </h1>
                <p class="text-blue-100 text-lg md:text-xl font-medium max-w-2xl mx-auto drop-shadow-md">
                    {subtitle}
                </p>
            </div>
        )
    }

    <!-- Scroll Down Indicator (Optional but nice) -->
    <div
        class="absolute bottom-6 md:bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce cursor-pointer"
    >
        <i
            class="ri-arrow-down-line text-white text-3xl md:text-4xl drop-shadow-md"
        ></i>
    </div>
</header>
